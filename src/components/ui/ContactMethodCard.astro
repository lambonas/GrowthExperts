---
export interface Props {
  icon: string;
  title: string;
  detail: string;
  link?: string;
  hours?: string;
  colorClass?: string;
}

const {
  icon,
  title,
  detail,
  link,
  hours,
  colorClass = 'text-primary-500',
} = Astro.props;

// Icon mapping for common icons
const iconPaths: Record<string, string> = {
  phone: 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z',
  email: 'M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z',
  map: 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z',
};
---

<div class="bg-white p-8 rounded-xl shadow-md border-2 border-gray-100 hover:border-primary-200 hover:shadow-xl transition-all duration-300 text-center">
  <!-- Icon -->
  <div class={`w-16 h-16 ${colorClass.replace('text-', 'bg-').replace('-500', '-100')} rounded-full flex items-center justify-center mx-auto mb-4`}>
    <svg class={`w-8 h-8 ${colorClass}`} fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d={iconPaths[icon]} clip-rule="evenodd" />
    </svg>
  </div>

  <!-- Title -->
  <h3 class="text-xl font-bold font-display text-gray-900 mb-2">{title}</h3>

  <!-- Detail -->
  {link ? (
    <a
      href={link}
      class="text-lg font-semibold text-primary-600 hover:text-primary-700 hover:underline mb-2 inline-block"
    >
      {detail}
    </a>
  ) : (
    <p class="text-lg font-semibold text-gray-800 mb-2">{detail}</p>
  )}

  <!-- Hours or Additional Info -->
  {hours && (
    <p class="text-sm text-gray-600">{hours}</p>
  )}
</div>
