const iconSvg = icons[industry] || icons['default'];
---

<span
  class="industry-icon inline-flex items-center justify-center"
  role="img"
  aria-label={`${industry} industry icon`}
  set:html={iconSvg}
/>

<style>
  .industry-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .industry-icon :global(svg) {
    display: block;
  }
</style>