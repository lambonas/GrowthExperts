      </svg>
      <div>
        <div class="font-bold text-gray-900 text-sm md:text-base">Google Reviews</div>
        <div class="flex items-center gap-1">
          <span class="text-xs md:text-sm font-bold text-gray-900">5.0</span>
          <div class="flex">
            {[...Array(5)].map((_, i) => (
              <svg
                class="w-3 h-3 md:w-4 md:h-4 text-[#FBBC04]"
                fill="currentColor"
                viewBox="0 0 20 20"
                key={i}
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scrolling Reviews Container - Optimized height for hero -->
  <div class="relative h-[200px] md:h-[240px] overflow-hidden rounded-lg">
    <!-- Top gradient fade -->
    <div class="absolute top-0 left-0 right-0 h-12 bg-gradient-to-b from-white to-transparent z-10 pointer-events-none"></div>

    <!-- Bottom gradient fade -->
    <div class="absolute bottom-0 left-0 right-0 h-12 bg-gradient-to-t from-white to-transparent z-10 pointer-events-none"></div>

    <!-- Scrolling content - Optimized for hero section -->
    <div class="flex flex-col gap-3 animate-scroll-up">
      {duplicatedReviews.map((review, index) => (
        <div
          class="bg-gradient-to-br from-white to-gray-50 p-4 md:p-5 rounded-lg shadow-md border border-primary-100 hover:shadow-lg hover:border-primary-200 transition-all flex-shrink-0"
          key={index}
        >
          <div class="mb-2 md:mb-3">
            <svg class="w-5 h-5 md:w-6 md:h-6 mb-1.5" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            <div class="flex items-center gap-1">
              {[...Array(5)].map((_, i) => (
                <svg
                  class="w-4 h-4 md:w-5 md:h-5 text-[#FBBC04]"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  key={i}
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
          </div>
          <p class="text-gray-700 leading-relaxed text-xs md:text-sm mb-2 md:mb-3 line-clamp-3">
            "{review.text}"
          </p>
          <p class="text-xs md:text-sm font-semibold text-gray-900">
            â€” {review.author}
          </p>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .animate-scroll-up {
    animation: scroll-up 40s linear infinite;
  }

  @keyframes scroll-up {
    0% {
      transform: translateY(0);
    }
    100% {
      /* -50% because we duplicated the reviews array for a seamless loop */
      transform: translateY(-50%);
    }
  }

  /* Pause animation on hover for better UX */
  .animate-scroll-up:hover {
    animation-play-state: paused;
  }
</style>
