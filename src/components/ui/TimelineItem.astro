---
export interface Props {
  year: string;
  title: string;
  description: string;
  milestone?: string;
  isLast?: boolean;
}

const { year, title, description, milestone, isLast = false } = Astro.props;
---

<div class="relative flex items-start space-x-6">
  <!-- Year Badge with Connecting Line -->
  <div class="flex-shrink-0 relative z-10">
    <div class="w-20 h-20 rounded-full bg-gradient-to-br from-primary-500 to-secondary-500 text-white flex items-center justify-center font-bold text-lg shadow-lg border-4 border-white">
      {year}
    </div>
    {!isLast && (
      <div class="absolute top-20 left-1/2 -translate-x-1/2 w-1 h-full bg-gradient-to-b from-primary-300 via-secondary-300 to-transparent"></div>
    )}
  </div>

  <!-- Content -->
  <div class="flex-grow pb-12 pt-4">
    <h4 class="text-2xl font-bold text-gray-900 mb-2">{title}</h4>
    <p class="text-gray-600 leading-relaxed text-lg mb-3">{description}</p>
    {milestone && (
      <div class="inline-block px-4 py-2 bg-secondary-100 text-secondary-800 text-sm font-semibold rounded-full">
        {milestone}
      </div>
    )}
  </div>
</div>
