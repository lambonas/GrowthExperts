---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import CategoryBadge from './CategoryBadge.astro';

interface Props {
  post: CollectionEntry<'blog'>;
  variant?: 'featured' | 'regular';
}

const { post, variant = 'regular' } = Astro.props;
const { title, description, publishDate, category, image, imageAlt, author, featured } = post.data;

// Format date
const formattedDate = new Date(publishDate).toLocaleDateString('en-AU', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});

// Calculate read time
const readTime = Math.ceil(description.split(' ').length / 50 + 3); // Approximate

// Truncate description
const maxLength = variant === 'featured' ? 140 : 100;
const truncatedDescription = description.length > maxLength
  ? description.substring(0, maxLength) + '...'
  : description;

const cardClasses = variant === 'featured'
  ? 'group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100 hover:border-primary-200 hover:-translate-y-1'
  : 'group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100 hover:border-primary-200 hover:-translate-y-1 flex flex-col h-full';
---

<article class={cardClasses}>
  <!-- Image Container -->
  <a href={`/blog/${post.id}/`} class="block relative overflow-hidden">
    {image ? (
      <div class={variant === 'featured' ? 'aspect-[16/9]' : 'aspect-[4/3]'}>
        <Image
          src={image}
          alt={imageAlt || title}
          widths={variant === 'featured' ? [600, 800, 1200] : [400, 600, 800]}
          sizes={variant === 'featured' ? '(max-width: 768px) 100vw, 800px' : '(max-width: 768px) 100vw, 400px'}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
          loading="lazy"
          format="webp"
          quality={85}
        />
      </div>
    ) : (
      <div class={`bg-gradient-to-br from-primary-100 to-secondary-100 ${variant === 'featured' ? 'aspect-[16/9]' : 'aspect-[4/3]'} flex items-center justify-center`}>
        <svg class="w-16 h-16 text-primary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
      </div>
    )}

    <!-- Category Badge Overlay -->
    <div class="absolute top-4 left-4 z-10">
      <CategoryBadge category={category} />
    </div>

    <!-- Featured Badge (if applicable) -->
    {featured && variant === 'featured' && (
      <div class="absolute top-4 right-4 z-10">
        <span class="inline-flex items-center gap-1 px-3 py-1 bg-accent-500 text-white text-xs font-semibold rounded-full">
          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          Featured
        </span>
      </div>
    )}
  </a>

  <!-- Content -->
  <div class={variant === 'featured' ? 'p-6' : 'p-6 flex-1 flex flex-col'}>
    <!-- Title -->
    <a href={`/blog/${post.id}/`} class="block">
      <h3 class={`font-bold font-display text-gray-900 group-hover:text-primary-600 transition-colors line-clamp-2 ${variant === 'featured' ? 'text-2xl mb-3' : 'text-xl mb-2'}`}>
        {title}
      </h3>
    </a>

    <!-- Description -->
    <p class={`text-gray-600 line-clamp-3 ${variant === 'featured' ? 'text-base mb-4' : 'text-sm mb-4 flex-1'}`}>
      {truncatedDescription}
    </p>

    <!-- Meta Information -->
    <div class="flex items-center justify-between text-sm text-gray-500 pt-4 border-t border-gray-100">
      <div class="flex items-center gap-4">
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <time datetime={publishDate.toISOString()}>{formattedDate}</time>
        </div>
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>{readTime} min</span>
        </div>
      </div>

      <!-- Read More Link -->
      <a
        href={`/blog/${post.id}/`}
        class="inline-flex items-center gap-1 text-primary-600 hover:text-primary-700 font-semibold group/link"
      >
        <span>Read {variant === 'featured' ? 'Article' : 'More'}</span>
        <svg class="w-4 h-4 group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</article>
