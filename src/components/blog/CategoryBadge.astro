---
interface Props {
  category: string;
  variant?: 'solid' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  clickable?: boolean;
}

const { category, variant = 'solid', size = 'md', clickable = false } = Astro.props;

// Map categories to colors
const categoryColors: Record<string, { bg: string; text: string; border: string; hover: string }> = {
  'SEO': {
    bg: 'bg-primary-500',
    text: 'text-primary-700',
    border: 'border-primary-500',
    hover: 'hover:bg-primary-600',
  },
  'Local SEO': {
    bg: 'bg-secondary-500',
    text: 'text-secondary-700',
    border: 'border-secondary-500',
    hover: 'hover:bg-secondary-600',
  },
  'Technical SEO': {
    bg: 'bg-accent-500',
    text: 'text-accent-700',
    border: 'border-accent-500',
    hover: 'hover:bg-accent-600',
  },
  'Content Marketing': {
    bg: 'bg-purple-500',
    text: 'text-purple-700',
    border: 'border-purple-500',
    hover: 'hover:bg-purple-600',
  },
  'Case Studies': {
    bg: 'bg-secondary-500',
    text: 'text-secondary-700',
    border: 'border-secondary-500',
    hover: 'hover:bg-secondary-600',
  },
  'Industry News': {
    bg: 'bg-blue-500',
    text: 'text-blue-700',
    border: 'border-blue-500',
    hover: 'hover:bg-blue-600',
  },
  'Tips & Guides': {
    bg: 'bg-indigo-500',
    text: 'text-indigo-700',
    border: 'border-indigo-500',
    hover: 'hover:bg-indigo-600',
  },
};

const colors = categoryColors[category] || categoryColors['SEO'];

const sizeClasses = {
  sm: 'text-xs px-2 py-1',
  md: 'text-sm px-3 py-1',
  lg: 'text-base px-4 py-2',
};

const baseClasses = `inline-flex items-center gap-1 font-semibold rounded-full transition-all ${sizeClasses[size]}`;

const variantClasses = variant === 'solid'
  ? `${colors.bg} text-white ${clickable ? colors.hover : ''} shadow-sm`
  : `bg-white ${colors.text} border ${colors.border} ${clickable ? `hover:${colors.bg} hover:text-white` : ''}`;

const categorySlug = category.toLowerCase().replace(/ /g, '-');
const href = clickable ? `/blog/category/${categorySlug}/` : undefined;

const Component = clickable ? 'a' : 'span';
---

<Component
  class={`${baseClasses} ${variantClasses} ${clickable ? 'cursor-pointer' : ''}`}
  href={href}
>
  <!-- Icon based on category -->
  {category === 'SEO' && (
    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
    </svg>
  )}
  {category === 'Local SEO' && (
    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
    </svg>
  )}
  {category === 'Technical SEO' && (
    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
    </svg>
  )}
  <span>{category}</span>
</Component>
