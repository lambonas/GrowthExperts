---
import Button from '../ui/Button.astro';

const services = [
  {
    title: 'Local SEO',
    description: 'Dominate local search results and attract more customers in your area with our proven local SEO strategies.',
    icon: 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z',
    href: '/seo-services/local-seo',
  },
  {
    title: 'Enterprise SEO',
    description: 'Scale your SEO efforts with enterprise-level strategies that deliver results for large organizations.',
    icon: 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4',
    href: '/seo-services/enterprise-seo',
  },
  {
    title: 'E-commerce SEO',
    description: 'Drive more organic traffic and sales to your online store with specialized e-commerce SEO services.',
    icon: 'M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z',
    href: '/seo-services/ecommerce-seo',
  },
  {
    title: 'Shopify SEO',
    description: 'Optimize your Shopify store for search engines and increase your organic traffic and revenue.',
    icon: 'M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z',
    href: '/seo-services/shopify-seo',
  },
  {
    title: 'B2B SEO',
    description: 'Generate qualified leads and build authority with SEO strategies designed for B2B companies.',
    icon: 'M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
    href: '/b2b-seo-agency',
  },
  {
    title: 'International SEO',
    description: 'Expand your global reach with international SEO strategies that work across multiple countries and languages.',
    icon: 'M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
    href: '/seo-services/international-seo-agency',
  },
];
---

<section class="section-padding bg-white">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        Comprehensive SEO Services
      </h2>
      <p class="text-lg md:text-xl text-gray-600">
        From local businesses to enterprise organizations, we have the expertise to help you succeed online
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {
        services.map((service) => (
          <div class="card group">
            <!-- Icon -->
            <div class="w-14 h-14 bg-primary-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-primary-600 transition-colors">
              <svg
                class="w-7 h-7 text-primary-600 group-hover:text-white transition-colors"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d={service.icon}
                />
              </svg>
            </div>

            <!-- Content -->
            <h3 class="text-xl font-bold text-gray-900 mb-3">{service.title}</h3>
            <p class="text-gray-600 mb-4 leading-relaxed">{service.description}</p>

            <!-- Link -->
            <a
              href={service.href}
              class="inline-flex items-center text-primary-600 hover:text-primary-700 font-semibold transition-colors group"
            >
              Learn more
              <svg
                class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </a>
          </div>
        ))
      }
    </div>

    <!-- CTA -->
    <div class="text-center">
      <Button variant="secondary" size="lg" href="/seo-services">
        View All Services
      </Button>
    </div>
  </div>
</section>
