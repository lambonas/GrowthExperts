---

<footer class="relative overflow-hidden bg-white" transition:persist>
  <div class="container-custom">
    <!-- Contact Info Bar - Prominent and accessible -->
    <div class="py-8 border-b border-neutral-200">
      <div class="flex flex-wrap items-center justify-center gap-4 md:gap-8">
        <!-- Phone -->
        <a href="tel:+61281128010" class="flex items-center space-x-2 text-neutral-700 hover:text-primary-600 transition-colors group">
          <svg class="w-5 h-5 text-primary-500 group-hover:text-primary-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span class="font-semibold">{contactInfo.phone}</span>
        </a>

        <span class="hidden md:inline text-neutral-300">|</span>

        <!-- Email -->
        <a href="mailto:Info@growthexperts.com.au" class="flex items-center space-x-2 text-neutral-700 hover:text-primary-600 transition-colors group">
          <svg class="w-5 h-5 text-primary-500 group-hover:text-primary-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <span class="font-semibold">{contactInfo.email}</span>
        </a>

        <span class="hidden md:inline text-neutral-300">|</span>

        <!-- Location with Directions Link -->
        <a href="https://www.google.com/maps/dir/?api=1&destination=Digital+Growth+Experts+Sydney" target="_blank" rel="noopener noreferrer" class="flex items-center space-x-2 text-neutral-700 hover:text-primary-600 transition-colors group">
          <svg class="w-5 h-5 text-primary-500 group-hover:text-primary-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span class="font-semibold">Sydney, NSW</span>
          <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>

        <span class="hidden lg:inline text-neutral-300">|</span>

        <!-- Business Hours -->
        <div class="flex items-center space-x-2 text-neutral-700">
          <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="font-semibold">{contactInfo.hours}</span>
        </div>
      </div>
    </div>

    <!-- Streamlined 3-Column Footer Links -->
    <div class="py-12 lg:py-16">
      <div class="grid md:grid-cols-3 gap-8 mb-12">

        <!-- Services Column -->
        <div>
          <h3 class="font-bold text-lg mb-4 text-primary-700">Services</h3>
          <ul class="space-y-3">
            {
              footerLinks.services.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-neutral-700 hover:text-primary-600 transition-colors font-medium"
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <!-- Company Column -->
        <div>
          <h3 class="font-bold text-lg mb-4 text-primary-700">Company</h3>
          <ul class="space-y-3">
            {
              footerLinks.company.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-neutral-700 hover:text-primary-600 transition-colors font-medium"
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <!-- Resources Column (includes legal links) -->
        <div>
          <h3 class="font-bold text-lg mb-4 text-primary-700">Resources</h3>
          <ul class="space-y-3">
            {
              footerLinks.resources.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class={`hover:text-primary-600 transition-colors ${
                      link.label.includes('Privacy') || link.label.includes('Terms')
                        ? 'text-neutral-600 text-sm'
                        : 'text-neutral-700 font-medium'
                    }`}
                  >
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>

      <!-- Social Links Row -->
      <div class="flex items-center justify-center py-8 border-t border-b border-neutral-200">
        <div class="flex items-center space-x-3">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-9 h-9 flex items-center justify-center text-neutral-600 hover:text-primary-600 bg-neutral-50 hover:bg-primary-50 border border-neutral-200 hover:border-primary-300 rounded-full transition-all duration-300"
              aria-label={social.name}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d={social.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Google Maps Location Section -->
      <div class="py-12 border-b border-neutral-200">
        <div class="max-w-5xl mx-auto">
          <!-- Simple Google Maps Iframe -->
          <div class="relative rounded-xl overflow-hidden shadow-lg border border-neutral-200">
            <div class="relative w-full" style="aspect-ratio: 16 / 9;">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3311.0479299945896!2d151.0322660757105!3d-33.91416597320935!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6b12bd8279b59c8b%3A0x262f67808b13ec8b!2sDigital%20Growth%20Experts!5e0!3m2!1sen!2sau!4v1763011793095!5m2!1sen!2sau"
                width="600"
                height="450"
                style="border:0; width: 100%; height: 100%;"
                allowfullscreen
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Google Maps location of Digital Growth Experts in Sydney, NSW"
                aria-label="Interactive map showing Digital Growth Experts office location"
              ></iframe>
            </div>
          </div>
        </div>
      </div>

      <!-- Simplified Bottom Bar -->
      <div class="pt-6 pb-8 text-center">
        <p class="text-neutral-600 text-sm">
          Â© {currentYear} <span class="text-primary-600 font-semibold">Digital Growth Experts</span>. All rights reserved.
          <span class="hidden md:inline">| Australian-Based Team | ABN: 74 649 452 077</span>
        </p>
        <p class="md:hidden text-neutral-600 text-sm mt-2">
          Australian-Based Team | ABN: 74 649 452 077
        </p>
        <p class="text-neutral-600 text-sm mt-2">
          <a href="/seo-sydney" class="text-primary-600 hover:text-primary-700 font-medium transition-colors">SEO Sydney</a> |
          <a href="/seo-melbourne" class="text-primary-600 hover:text-primary-700 font-medium transition-colors">SEO Melbourne</a> |
          <a href="/seo-perth" class="text-primary-600 hover:text-primary-700 font-medium transition-colors">SEO Perth</a> |
          <a href="/seo-adelaide" class="text-primary-600 hover:text-primary-700 font-medium transition-colors">SEO Adelaide</a>
        </p>
      </div>
    </div>
  </div>
</footer>

