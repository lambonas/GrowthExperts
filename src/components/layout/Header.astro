---
import { Image } from 'astro:assets';
// Import logo from assets for build-time optimization
import logo from '../../assets/logo.png';

const navItems = [
  {
    label: 'Services',
    href: '/services/',
    dropdown: [
      { label: 'Local SEO', href: '/local-seo/' },
      { label: 'International SEO', href: '/international-seo/' },
      { label: 'B2B SEO', href: '/b2b-seo/' },
      { label: 'Small Business SEO', href: '/small-business-seo/' },
      { label: 'Enterprise SEO', href: '/enterprise-seo/' },
      { label: 'Technical SEO', href: '/technical-seo/' },
      { label: 'Content Marketing', href: '/content-marketing/' },
      { label: 'Link Building', href: '/link-building/' },
      { label: 'SEO Audit', href: '/seo-audit/' },
      { label: 'E-commerce SEO', href: '/ecommerce-seo/' },
    ],
  },
  {
    label: 'Industries',
    href: '/industries/',
    dropdown: [
      { label: 'Accountant SEO', href: '/accountant-seo/' },
      { label: 'Childcare SEO', href: '/childcare-seo/' },
      { label: 'Dental SEO', href: '/dental-seo/' },
      { label: 'Electrician SEO', href: '/electrician-seo/' },
      { label: 'Healthcare SEO', href: '/healthcare-seo/' },
      { label: 'Lawyer SEO', href: '/lawyer-seo/' },
      { label: 'Mortgage Broker SEO', href: '/mortgage-broker-seo/' },
      { label: 'Physio SEO', href: '/physio-seo/' },
      { label: 'Plumber SEO', href: '/plumber-seo/' },
      { label: 'Podiatry SEO', href: '/podiatry-seo/' },
      { label: 'Real Estate SEO', href: '/real-estate-seo/' },
    ],
  },
  { label: 'About', href: '/about/' },
  { label: 'FAQ', href: '/faq/' },
  { label: 'Contact', href: '/contact/' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-b border-primary-100 shadow-sm" transition:persist>
  <nav class="container-custom py-4">
    <div class="flex items-center justify-between">
      <!-- Logo - Optimized for performance -->
      <a href="/" class="flex items-center group">
        <Image
          src={logo}
          alt="Digital Growth Experts"
          width={231}
          height={84}
          format="webp"
          quality={90}
          loading="eager"
          fetchpriority="high"
          class="h-12 w-auto transition-opacity group-hover:opacity-90"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-8">
        {
          navItems.map((item) => (
            <div class="relative group">
              <a
                href={item.href}
                class={`text-gray-700 hover:text-primary-600 font-medium transition-colors ${
                  currentPath === item.href ? 'text-primary-600' : ''
                }`}
              >
                {item.label}
              </a>
              {item.dropdown && (
                <div class="absolute top-full left-0 mt-2 w-56 bg-white rounded-lg shadow-lg border border-gray-100 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 py-2">
                  {item.dropdown.map((subItem) => (
                    <a
                      href={subItem.href}
                      class="block px-4 py-2 text-gray-700 hover:bg-primary-50 hover:text-primary-600 transition-colors"
                    >
                      {subItem.label}
                    </a>
                  ))}
                </div>
              )}
            </div>
          ))
        }
      </div>

      <!-- CTA Button - Enhanced Brand Accent -->
      <div class="hidden lg:block">
        <a href="/contact/" class="inline-flex items-center px-6 py-2.5 bg-gradient-to-r from-accent-500 to-accent-600 text-white font-semibold rounded-lg hover:from-accent-600 hover:to-accent-700 hover:shadow-lg hover:shadow-accent-200 transform hover:-translate-y-0.5 transition-all duration-200">
          Get Free Audit
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden p-2 text-gray-700 hover:text-primary-600 transition-colors"
        aria-label="Toggle mobile menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden lg:hidden mt-4 pb-4 border-t border-gray-100 pt-4">
      {
        navItems.map((item) => (
          <div class="py-2">
            <a
              href={item.href}
              class={`block text-gray-700 hover:text-primary-600 font-medium transition-colors ${
                currentPath === item.href ? 'text-primary-600' : ''
              }`}
            >
              {item.label}
            </a>
            {item.dropdown && (
              <div class="ml-4 mt-2 space-y-2">
                {item.dropdown.map((subItem) => (
                  <a
                    href={subItem.href}
                    class="block text-gray-600 hover:text-primary-600 transition-colors"
                  >
                    {subItem.label}
                  </a>
                ))}
              </div>
            )}
          </div>
        ))
      }
      <div class="mt-4">
        <a href="/contact/" class="inline-flex items-center justify-center w-full px-6 py-3 bg-gradient-to-r from-accent-500 to-accent-600 text-white font-semibold rounded-lg hover:from-accent-600 hover:to-accent-700 hover:shadow-lg transition-all">
          Get Free Audit
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </nav>
</header>

<!-- Spacer to prevent content from going under fixed header -->
<div class="h-20"></div>

<script>
  // Mobile menu state management with View Transitions support
  function setupMobileMenu() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (!mobileMenuButton || !mobileMenu) return;

    // Toggle menu
    const toggleMenu = () => {
      const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
      mobileMenuButton.setAttribute('aria-expanded', String(!isExpanded));
      mobileMenu.classList.toggle('hidden');
    };

    // Close menu
    const closeMenu = () => {
      mobileMenu.classList.add('hidden');
      mobileMenuButton.setAttribute('aria-expanded', 'false');
    };

    // Event listeners
    mobileMenuButton.addEventListener('click', toggleMenu);

    // Close mobile menu when clicking outside
    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (!target.closest('#mobile-menu-button') && !target.closest('#mobile-menu')) {
        closeMenu();
      }
    });

    // Ensure menu is closed on navigation
    mobileMenu.querySelectorAll('a').forEach((link) => {
      link.addEventListener('click', closeMenu);
    });
  }

  // Initialize on page load
  setupMobileMenu();

  // Reinitialize after View Transitions
  document.addEventListener('astro:after-swap', setupMobileMenu);

  // Close menu before transition starts
  document.addEventListener('astro:before-preparation', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    mobileMenu?.classList.add('hidden');
    mobileMenuButton?.setAttribute('aria-expanded', 'false');
  });
</script>
