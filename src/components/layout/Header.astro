---
import { Image } from 'astro:assets';
// Import logo from assets for build-time optimization
import logo from '../../assets/logo.png';

const navItems = [
  {
    label: 'Services',
    href: '/services/',
    dropdown: [
      { label: 'Local SEO', href: '/local-seo/' },
      { label: 'International SEO', href: '/international-seo/' },
      { label: 'B2B SEO', href: '/b2b-seo/' },
      { label: 'Small Business SEO', href: '/small-business-seo/' },
      { label: 'Enterprise SEO', href: '/enterprise-seo/' },
      { label: 'Technical SEO', href: '/technical-seo/' },
      { label: 'Content Marketing', href: '/content-marketing/' },
      { label: 'Link Building', href: '/link-building/' },
      { label: 'SEO Audit', href: '/seo-audit/' },
      { label: 'E-commerce SEO', href: '/ecommerce-seo/' },
    ],
  },
  {
    label: 'Industries',
    href: '/industries/',
    dropdown: [
      { label: 'Accountant SEO', href: '/accountant-seo/' },
      { label: 'Childcare SEO', href: '/childcare-seo/' },
      { label: 'Dental SEO', href: '/dental-seo/' },
      { label: 'Electrician SEO', href: '/electrician-seo/' },
      { label: 'Healthcare SEO', href: '/healthcare-seo/' },
      { label: 'Lawyer SEO', href: '/lawyer-seo/' },
      { label: 'Mortgage Broker SEO', href: '/mortgage-broker-seo/' },
      { label: 'Physio SEO', href: '/physio-seo/' },
      { label: 'Plumber SEO', href: '/plumber-seo/' },
      { label: 'Podiatry SEO', href: '/podiatry-seo/' },
      { label: 'Real Estate SEO', href: '/real-estate-seo/' },
    ],
  },
  { label: 'About', href: '/about/' },
  { label: 'FAQ', href: '/faq/' },
  { label: 'Contact', href: '/contact/' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white border-b border-gray-200 shadow-sm" transition:persist>
  <nav class="container-custom py-4">
    <div class="flex items-center justify-between">
      <!-- Logo - Optimized for performance -->
      <a href="/" class="flex items-center group">
        <Image
          src={logo}
          alt="Digital Growth Experts"
          width={231}
          height={84}
          format="webp"
          quality={90}
          loading="eager"
          fetchpriority="high"
          class="h-12 w-auto transition-all duration-200 group-hover:opacity-80 group-hover:scale-[1.02]"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-8">
        {
          navItems.map((item) => (
            <div class="relative group">
              <a
                href={item.href}
                class={`flex items-center gap-1 text-gray-700 hover:text-primary-600 font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-offset-2 rounded ${
                  currentPath === item.href ? 'text-primary-600' : ''
                }`}
              >
                {item.label}
                {item.dropdown && (
                  <svg class="w-4 h-4 transition-transform group-hover:rotate-180 duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                )}
              </a>
              {item.dropdown && (
                <div class={`absolute top-full mt-2 min-w-[28rem] max-w-[32rem] w-auto bg-white rounded-xl shadow-xl border border-gray-200 opacity-0 invisible translate-y-2 group-hover:opacity-100 group-hover:visible group-hover:translate-y-0 transition-all duration-300 ease-out py-4 ${
                  item.label === 'Industries' ? 'right-0' : 'left-0'
                }`}>
                  <div class="grid grid-cols-2 gap-x-6 gap-y-1">
                    {item.dropdown.map((subItem, subIndex) => (
                      <a
                        href={subItem.href}
                        class={`block px-4 py-2.5 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 transition-colors rounded-md focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 ${
                          subIndex >= Math.ceil(item.dropdown.length / 2) ? 'pl-4' : 'first:pl-4'
                        }`}
                      >
                        {subItem.label}
                      </a>
                    ))}
                  </div>
                </div>
              )}
            </div>
          ))
        }
      </div>

      <!-- CTA Button - Enhanced Brand Accent -->
      <div class="hidden lg:block ml-6">
        <a href="/contact/" class="inline-flex items-center px-7 py-3 bg-gradient-to-r from-accent-500 to-accent-600 text-white font-bold rounded-lg shadow-md shadow-accent-200 hover:from-accent-600 hover:to-accent-700 hover:shadow-xl hover:shadow-accent-300 transform hover:-translate-y-0.5 hover:scale-105 transition-all duration-200 border border-accent-400 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent-500 focus-visible:ring-offset-2">
          Get Free Audit
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden p-3 text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-lg transition-all min-w-[44px] min-h-[44px] flex items-center justify-center"
        aria-label="Toggle mobile menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6 menu-open-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg class="w-6 h-6 menu-close-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden lg:hidden mt-6 pb-6 border-t border-gray-200 pt-6 bg-white">
      {
        navItems.map((item) => (
          <div class="py-3">
            {item.dropdown ? (
              <div>
                <div class="flex items-center justify-between gap-2">
                  <a
                    href={item.href}
                    class={`block text-gray-700 hover:text-primary-600 font-semibold text-base transition-colors flex-1 py-2 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 rounded ${
                      currentPath === item.href ? 'text-primary-600' : ''
                    }`}
                  >
                    {item.label}
                  </a>
                  <button
                    class="mobile-dropdown-toggle p-2 text-gray-600 hover:text-primary-600 hover:bg-gray-100 rounded-lg transition-all min-w-[44px] min-h-[44px] flex items-center justify-center flex-shrink-0"
                    aria-expanded="false"
                    aria-controls={`dropdown-${item.label.toLowerCase()}`}
                    aria-label={`Toggle ${item.label} menu`}
                  >
                    <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </button>
                </div>
                <div
                  id={`dropdown-${item.label.toLowerCase()}`}
                  class="mobile-dropdown-content overflow-hidden transition-all duration-300"
                  style="display: grid; grid-template-rows: 0fr;"
                >
                  <div class="overflow-hidden">
                    <div class="ml-4 mt-2 space-y-2 pb-2 bg-gray-50 rounded-lg p-3">
                      {item.dropdown.map((subItem) => (
                        <a
                          href={subItem.href}
                          class="block text-gray-700 hover:text-primary-600 hover:bg-white active:bg-primary-100 transition-colors py-2.5 px-3 rounded-md font-medium focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-500"
                        >
                          {subItem.label}
                        </a>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            ) : (
              <a
                href={item.href}
                class={`block text-gray-700 hover:text-primary-600 font-semibold text-base transition-colors py-2 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 rounded ${
                  currentPath === item.href ? 'text-primary-600' : ''
                }`}
              >
                {item.label}
              </a>
            )}
          </div>
        ))
      }
      <div class="mt-4">
        <a href="/contact/" class="inline-flex items-center justify-center w-full px-6 py-3 bg-gradient-to-r from-accent-500 to-accent-600 text-white font-bold rounded-lg shadow-md shadow-accent-200 hover:from-accent-600 hover:to-accent-700 hover:shadow-lg transition-all border border-accent-400 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent-500 focus-visible:ring-offset-2">
          Get Free Audit
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </nav>
</header>

<!-- Spacer to prevent content from going under fixed header -->
<div class="h-20"></div>

<script>
  // Mobile menu state management with View Transitions support
  function setupMobileMenu() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (!mobileMenuButton || !mobileMenu) return;

    // Toggle menu
    const toggleMenu = () => {
      const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
      mobileMenuButton.setAttribute('aria-expanded', String(!isExpanded));
      mobileMenuButton.querySelector('.menu-open-icon')?.classList.toggle('hidden');
      mobileMenuButton.querySelector('.menu-close-icon')?.classList.toggle('hidden');
      mobileMenu.classList.toggle('hidden');
    };

    // Close menu
    const closeMenu = () => {
      mobileMenu.classList.add('hidden');
      mobileMenuButton.setAttribute('aria-expanded', 'false');
      mobileMenuButton.querySelector('.menu-open-icon')?.classList.remove('hidden');
      mobileMenuButton.querySelector('.menu-close-icon')?.classList.add('hidden');
    };

    // Event listeners
    mobileMenuButton.addEventListener('click', toggleMenu);

    // Close mobile menu when clicking outside
    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (!target.closest('#mobile-menu-button') && !target.closest('#mobile-menu')) {
        closeMenu();
      }
    });

    // Ensure menu is closed on navigation
    mobileMenu.querySelectorAll('a').forEach((link) => {
      link.addEventListener('click', closeMenu);
    });
  }

  // Mobile dropdown state management
  function setupMobileDropdowns() {
    const dropdownToggles = document.querySelectorAll('.mobile-dropdown-toggle');

    dropdownToggles.forEach((toggle) => {
      // Remove any existing listeners by cloning
      const newToggle = toggle.cloneNode(true) as HTMLElement;
      toggle.parentNode?.replaceChild(newToggle, toggle);

      newToggle.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();

        const button = e.currentTarget as HTMLButtonElement;
        const dropdownId = button.getAttribute('aria-controls');
        const dropdown = dropdownId ? document.getElementById(dropdownId) : null;
        const chevron = button.querySelector('svg');

        if (!dropdown) return;

        const isExpanded = button.getAttribute('aria-expanded') === 'true';

        // Close all other dropdowns (accordion behavior)
        document.querySelectorAll('.mobile-dropdown-toggle').forEach((otherToggle) => {
          if (otherToggle !== button) {
            const otherDropdownId = otherToggle.getAttribute('aria-controls');
            const otherDropdown = otherDropdownId ? document.getElementById(otherDropdownId) : null;
            const otherChevron = otherToggle.querySelector('svg');

            if (otherDropdown) {
              otherDropdown.style.gridTemplateRows = '0fr';
              otherToggle.setAttribute('aria-expanded', 'false');
              otherChevron?.classList.remove('rotate-180');
            }
          }
        });

        // Toggle current dropdown
        if (isExpanded) {
          dropdown.style.gridTemplateRows = '0fr';
          button.setAttribute('aria-expanded', 'false');
          chevron?.classList.remove('rotate-180');
        } else {
          dropdown.style.gridTemplateRows = '1fr';
          button.setAttribute('aria-expanded', 'true');
          chevron?.classList.add('rotate-180');
        }
      });
    });

    // Close all dropdowns on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        document.querySelectorAll('.mobile-dropdown-toggle').forEach((toggle) => {
          const dropdownId = toggle.getAttribute('aria-controls');
          const dropdown = dropdownId ? document.getElementById(dropdownId) : null;
          const chevron = toggle.querySelector('svg');

          if (dropdown) {
            dropdown.style.gridTemplateRows = '0fr';
            toggle.setAttribute('aria-expanded', 'false');
            chevron?.classList.remove('rotate-180');
          }
        });
      }
    });
  }

  // Initialize on page load
  setupMobileMenu();
  setupMobileDropdowns();

  // Reinitialize after View Transitions
  document.addEventListener('astro:after-swap', () => {
    setupMobileMenu();
    setupMobileDropdowns();
  });

  // Close menu and reset dropdowns before transition starts
  document.addEventListener('astro:before-preparation', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    mobileMenu?.classList.add('hidden');
    mobileMenuButton?.setAttribute('aria-expanded', 'false');

    // Reset all dropdowns
    document.querySelectorAll('.mobile-dropdown-toggle').forEach((toggle) => {
      const dropdownId = toggle.getAttribute('aria-controls');
      const dropdown = dropdownId ? document.getElementById(dropdownId) : null;
      const chevron = toggle.querySelector('svg');

      if (dropdown) {
        dropdown.style.gridTemplateRows = '0fr';
        toggle.setAttribute('aria-expanded', 'false');
        chevron?.classList.remove('rotate-180');
      }
    });
  });
</script>
