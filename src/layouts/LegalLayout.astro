---
import BaseLayout from './BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';

export interface Props {
  title: string;
  description: string;
  canonical: string;
  lastUpdated: string;
  pageType: 'Privacy Policy' | 'Terms of Service' | 'Cookie Policy';
  sections: Array<{
    id: string;
    title: string;
    subsections?: Array<{ id: string; title: string }>;
  }>;
}

const { title, description, canonical, lastUpdated, pageType, sections } = Astro.props;

// Open Graph image
const ogImage = 'https://digitalgrowthexperts.com.au/og-legal.png';

// Related pages navigation
const legalPages = [
  { title: 'Privacy Policy', url: '/legal/privacy', active: pageType === 'Privacy Policy' },
  { title: 'Terms of Service', url: '/legal/terms', active: pageType === 'Terms of Service' },
  { title: 'Cookie Policy', url: '/legal/cookies', active: pageType === 'Cookie Policy' },
];

// Breadcrumbs
const breadcrumbs = [
  { title: 'Home', url: '/' },
  { title: 'Legal', url: '/legal/privacy' },
  { title: pageType, url: canonical },
];
---

<BaseLayout
  title={title}
  description={description}
  canonical={canonical}
  ogImage={ogImage}
  ogType="article"
  noindex={false}
  nofollow={false}
  schema={{
    type: 'Article',
    data: {
      headline: pageType,
      dateModified: lastUpdated,
      datePublished: '2025-01-13',
    },
  }}
>
  <!-- Site Header -->
  <Header />

  <!-- Main Content Container -->
  <main id="main-content" class="min-h-screen bg-gradient-to-br from-neutral-50 via-white to-primary-50/30">
    <!-- Legal Pages Navigation Bar -->
    <nav class="bg-white border-b border-neutral-200 sticky top-0 z-40 shadow-sm" aria-label="Legal pages navigation">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16 overflow-x-auto">
          <div class="flex items-center space-x-1 sm:space-x-2">
            {legalPages.map((page) => (
              <a
                href={page.url}
                class={`px-3 sm:px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200 whitespace-nowrap ${
                  page.active
                    ? 'bg-primary-600 text-white shadow-md'
                    : 'text-neutral-700 hover:bg-neutral-100 hover:text-primary-600'
                }`}
                aria-current={page.active ? 'page' : undefined}
              >
                {page.title}
              </a>
            ))}
          </div>
          <a
            href="/"
            class="hidden sm:flex items-center text-sm text-neutral-600 hover:text-primary-600 transition-colors"
          >
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Back to Home
          </a>
        </div>
      </div>
    </nav>

    <!-- Breadcrumb Navigation -->
    <div class="bg-white border-b border-neutral-100">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
        <nav class="flex items-center space-x-2 text-sm" aria-label="Breadcrumb">
          {breadcrumbs.map((crumb, index) => (
            <>
              {index > 0 && (
                <svg class="w-4 h-4 text-neutral-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
              )}
              {index === breadcrumbs.length - 1 ? (
                <span class="font-medium text-neutral-900" aria-current="page">{crumb.title}</span>
              ) : (
                <a href={crumb.url} class="text-neutral-600 hover:text-primary-600 transition-colors">
                  {crumb.title}
                </a>
              )}
            </>
          ))}
        </nav>
      </div>
    </div>

    <!-- Content Section -->
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8 lg:py-12">
      <!-- Main Content Area -->
      <article class="w-full">
        <div class="bg-white rounded-xl shadow-lg border border-neutral-200 overflow-hidden">
          <!-- Article Header -->
          <header class="bg-gradient-to-r from-primary-600 to-primary-700 px-6 sm:px-8 lg:px-12 py-8 sm:py-12">
            <div class="max-w-4xl mx-auto">
              <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4 font-display">
                {pageType}
              </h1>
              <div class="flex flex-wrap items-center gap-4 text-primary-100">
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span class="text-sm font-medium">Last Updated: {lastUpdated}</span>
                </div>
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                  <span class="text-sm font-medium">Digital Growth Experts | ABN: 74 649 452 077</span>
                </div>
              </div>
            </div>
          </header>

          <!-- Inline Table of Contents -->
          <div class="bg-gradient-to-br from-neutral-50 to-primary-50/20 border-b border-neutral-200 px-6 sm:px-8 lg:px-12 py-6">
            <div class="max-w-4xl mx-auto">
              <button
                id="inline-toc-toggle"
                class="flex items-center justify-between w-full text-left group"
                aria-expanded="true"
                aria-controls="inline-toc"
              >
                <div class="flex items-center space-x-3">
                  <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                  </svg>
                  <span class="text-lg font-semibold text-neutral-900">Table of Contents</span>
                </div>
                <svg class="w-6 h-6 text-neutral-600 transform transition-transform group-hover:text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <nav id="inline-toc" class="mt-4 grid sm:grid-cols-2 gap-2" aria-label="Table of contents">
                {sections.map((section) => (
                  <a
                    href={`#${section.id}`}
                    class="block py-2 px-4 text-sm text-neutral-700 hover:text-primary-600 hover:bg-white rounded-lg transition-all duration-200 border border-transparent hover:border-primary-200 hover:shadow-sm toc-link"
                    data-section={section.id}
                  >
                    {section.title}
                  </a>
                ))}
              </nav>
            </div>
          </div>

          <!-- Legal Content -->
          <div class="px-6 sm:px-8 lg:px-12 py-8 sm:py-12">
            <div class="max-w-4xl mx-auto legal-content">
              <slot />
            </div>
          </div>

          <!-- Contact CTA Section -->
          <div class="bg-gradient-to-r from-secondary-50 to-primary-50 px-6 sm:px-8 lg:px-12 py-8 border-t border-neutral-200">
            <div class="max-w-4xl mx-auto text-center">
              <h2 class="text-2xl font-bold text-neutral-900 mb-3 font-display">
                Questions About Our Policies?
              </h2>
              <p class="text-neutral-700 mb-6 max-w-2xl mx-auto">
                We're committed to transparency and protecting your rights. If you have any questions or concerns about our {pageType.toLowerCase()}, we're here to help.
              </p>
              <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
                <a
                  href="mailto:legal@growthexperts.com.au"
                  class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-all duration-200 shadow-md hover:shadow-lg transform hover:-translate-y-0.5"
                >
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  Contact Legal Team
                </a>
                <a
                  href="mailto:hello@growthexperts.com.au"
                  class="inline-flex items-center px-6 py-3 bg-white text-primary-600 font-semibold rounded-lg hover:bg-neutral-50 transition-all duration-200 border-2 border-primary-600 transform hover:-translate-y-0.5"
                >
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                  </svg>
                  General Inquiries
                </a>
              </div>
            </div>
          </div>

          <!-- Related Legal Pages -->
          <div class="bg-neutral-50 px-6 sm:px-8 lg:px-12 py-8 border-t border-neutral-200">
            <div class="max-w-4xl mx-auto">
              <h3 class="text-lg font-semibold text-neutral-900 mb-4 font-display">Related Legal Information</h3>
              <div class="grid sm:grid-cols-2 gap-4">
                {legalPages
                  .filter((page) => !page.active)
                  .map((page) => (
                    <a
                      href={page.url}
                      class="flex items-center justify-between p-4 bg-white rounded-lg border border-neutral-200 hover:border-primary-300 hover:shadow-md transition-all duration-200 group"
                    >
                      <span class="font-medium text-neutral-900 group-hover:text-primary-600 transition-colors">
                        {page.title}
                      </span>
                      <svg class="w-5 h-5 text-neutral-400 group-hover:text-primary-600 transform group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  ))}
              </div>
            </div>
          </div>
        </div>
      </article>
    </div>

    <!-- Back to Top Button -->
    <button
      id="back-to-top"
      class="fixed bottom-8 right-8 bg-primary-600 text-white p-3 rounded-full shadow-lg hover:bg-primary-700 transition-all duration-300 transform hover:scale-110 opacity-0 pointer-events-none z-50"
      aria-label="Back to top"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
      </svg>
    </button>
  </main>

  <!-- Site Footer -->
  <Footer />

  <!-- Print Styles -->
  <style is:global>
    @media print {
      nav,
      aside,
      button,
      .no-print,
      header[role="banner"],
      footer[role="contentinfo"] {
        display: none !important;
      }

      .legal-content {
        max-width: 100% !important;
      }

      a[href]:after {
        content: " (" attr(href) ")";
        font-size: 0.8em;
        color: #666;
      }

      section {
        page-break-inside: avoid;
      }
    }
  </style>
</BaseLayout>

<style>
  /* Legal Content Typography */
  :global(.legal-content) {
    @apply text-neutral-800 leading-relaxed;
  }

  :global(.legal-content h2) {
    @apply text-2xl sm:text-3xl font-bold text-neutral-900 mt-12 mb-6 pb-3 border-b-2 border-primary-200 scroll-mt-24 font-display;
  }

  :global(.legal-content h3) {
    @apply text-xl sm:text-2xl font-semibold text-neutral-900 mt-8 mb-4 scroll-mt-24 font-display;
  }

  :global(.legal-content h4) {
    @apply text-lg sm:text-xl font-semibold text-neutral-800 mt-6 mb-3 scroll-mt-24;
  }

  :global(.legal-content p) {
    @apply mb-4 text-base sm:text-lg leading-relaxed;
  }

  :global(.legal-content ul),
  :global(.legal-content ol) {
    @apply mb-6 ml-6 space-y-2;
  }

  :global(.legal-content ul) {
    @apply list-disc;
  }

  :global(.legal-content ol) {
    @apply list-decimal;
  }

  :global(.legal-content li) {
    @apply text-base sm:text-lg leading-relaxed pl-2;
  }

  :global(.legal-content a) {
    @apply text-primary-600 hover:text-primary-700 underline decoration-primary-300 hover:decoration-primary-500 transition-colors font-medium;
  }

  :global(.legal-content a[href^="http"]):after {
    content: " â†—";
    @apply inline-block ml-1 text-primary-400;
  }

  :global(.legal-content strong) {
    @apply font-semibold text-neutral-900;
  }

  :global(.legal-content table) {
    @apply w-full mb-6 border-collapse;
  }

  :global(.legal-content table thead) {
    @apply bg-neutral-100;
  }

  :global(.legal-content table th) {
    @apply px-4 py-3 text-left text-sm font-semibold text-neutral-900 border border-neutral-300;
  }

  :global(.legal-content table td) {
    @apply px-4 py-3 text-sm text-neutral-700 border border-neutral-300;
  }

  :global(.legal-content table tbody tr:nth-child(even)) {
    @apply bg-neutral-50;
  }

  :global(.legal-content table tbody tr:hover) {
    @apply bg-primary-50 transition-colors;
  }

  :global(.legal-content section) {
    @apply mb-12;
  }

  /* Active TOC Link */
  :global(.toc-link.active) {
    @apply bg-primary-100 text-primary-700 font-semibold border-primary-300;
  }

  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
    scroll-padding-top: 8rem;
  }
</style>

<script>
  // Inline TOC Toggle
  const inlineTocToggle = document.getElementById('inline-toc-toggle');
  const inlineToc = document.getElementById('inline-toc');

  if (inlineTocToggle && inlineToc) {
    inlineTocToggle.addEventListener('click', () => {
      const isExpanded = inlineTocToggle.getAttribute('aria-expanded') === 'true';
      inlineTocToggle.setAttribute('aria-expanded', (!isExpanded).toString());

      if (isExpanded) {
        inlineToc.classList.add('hidden');
      } else {
        inlineToc.classList.remove('hidden');
      }

      const icon = inlineTocToggle.querySelector('svg:last-child');
      if (icon) {
        icon.classList.toggle('rotate-180');
      }
    });
  }

  // Back to Top Button
  const backToTopButton = document.getElementById('back-to-top');

  if (backToTopButton) {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 500) {
        backToTopButton.classList.remove('opacity-0', 'pointer-events-none');
        backToTopButton.classList.add('opacity-100');
      } else {
        backToTopButton.classList.add('opacity-0', 'pointer-events-none');
        backToTopButton.classList.remove('opacity-100');
      }
    });

    backToTopButton.addEventListener('click', () => {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
  }

  // Active TOC Section Highlighting
  const observerOptions = {
    root: null,
    rootMargin: '-20% 0px -35% 0px',
    threshold: 0,
  };

  const sections = document.querySelectorAll('.legal-content section[id]');
  const tocLinks = document.querySelectorAll('.toc-link');

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        const id = entry.target.getAttribute('id');

        tocLinks.forEach((link) => {
          link.classList.remove('active');
          if (link.getAttribute('data-section') === id) {
            link.classList.add('active');
          }
        });
      }
    });
  }, observerOptions);

  sections.forEach((section) => observer.observe(section));

  // Smooth scroll with offset for anchor links
  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const targetId = this.getAttribute('href');
      if (targetId && targetId !== '#') {
        const targetElement = document.querySelector(targetId);
        if (targetElement) {
          const offset = 120;
          const elementPosition = targetElement.getBoundingClientRect().top;
          const offsetPosition = elementPosition + window.scrollY - offset;

          window.scrollTo({
            top: offsetPosition,
            behavior: 'smooth',
          });
        }
      }
    });
  });
</script>
