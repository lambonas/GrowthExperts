    industry: 'Trades',
    description: 'Emergency electrician website with 24/7 call tracking, service area pages, and trust signals to generate qualified leads.',
    thumbnailImage: portfolioElectrician,
    metrics: { loadTime: '0.9s', mobileScore: 98, conversionRate: '+67%' },
    techStack: ['Astro', 'Tailwind CSS'],
  },
  {
    title: 'Legal Services',
    industry: 'Legal',
    description: 'Clean, professional legal website designed to build trust and convert visitors into consultation bookings.',
    thumbnailImage: portfolioLawyer,
    metrics: { loadTime: '0.8s', mobileScore: 99, conversionRate: '+38%' },
    techStack: ['Astro', 'Tailwind CSS'],
  },
  {
    title: 'Custom Cabinet Maker',
    industry: 'Trades',
    description: 'Bespoke cabinetry website featuring stunning project galleries, craftsmanship highlights, and quote request functionality.',
    thumbnailImage: portfolioCabinetMaker1,
    metrics: { loadTime: '1.0s', mobileScore: 96, conversionRate: '+49%' },
    techStack: ['Astro', 'Tailwind CSS'],
  },
  {
    title: 'Kitchen Cabinetry',
    industry: 'Home Improvement',
    description: 'Premium kitchen cabinet manufacturer website with before/after galleries and design consultation booking.',
    thumbnailImage: portfolioCabinetMaker2,
    metrics: { loadTime: '1.1s', mobileScore: 95, conversionRate: '+53%' },
    techStack: ['Astro', 'Tailwind CSS'],
  },
  {
    title: 'Finance Broker',
    industry: 'Finance',
    description: 'Professional mortgage broker website with loan calculators, application forms, and trust-building client testimonials.',
    thumbnailImage: portfolioFinanceBroker,
    metrics: { loadTime: '1.0s', mobileScore: 96, conversionRate: '+44%' },
    techStack: ['Astro', 'React', 'Tailwind CSS'],
  },
  {
    title: 'Glass Replacement Sydney',
    industry: 'Trades',
    description: 'Auto glass replacement website targeting Sydney customers with emergency services, online quotes, and mobile-first design.',
    thumbnailImage: portfolioGlassReplacementSydney,
    metrics: { loadTime: '0.9s', mobileScore: 97, conversionRate: '+63%' },
    techStack: ['Astro', 'Tailwind CSS'],
  },
