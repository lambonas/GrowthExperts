    serviceType: 'WebDesign',
    hasOfferCatalog: {
      '@type': 'OfferCatalog',
      name: 'Website Design Services',
      itemListElement: [
        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'Custom Website Design',
          },
        },
        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'Mobile-First Development',
          },
        },
        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'Conversion Optimisation',
          },
        },
        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'SEO Foundation',
          },
        },
        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'Lightning-Fast Loading',
          },
        },
        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'Ongoing Support',
          },
        },
      ],
    },
  },
};

// Portfolio items showcasing our completed website projects
const portfolioItems = [
  {
    title: 'Factory Direct Wardrobes',
    industry: 'Home Improvement',
    description: 'Custom wardrobe manufacturer website featuring product galleries, quote request forms, and location-based SEO for Sydney customers.',
    thumbnailImage: portfolioFactoryDirectWardrobes,
    metrics: { loadTime: '1.1s', mobileScore: 96, conversionRate: '+52%' },
    techStack: ['Astro', 'Tailwind CSS'],
    featured: true,
  },
  {
    title: 'Green Hills Childcare',
    industry: 'Childcare',
    description: 'Warm, inviting childcare centre website with enrolment forms, program information, and trust-building parent testimonials.',
    thumbnailImage: portfolioGreenhillsChildcare,
    metrics: { loadTime: '1.0s', mobileScore: 97, conversionRate: '+54%' },
    techStack: ['Astro', 'Tailwind CSS'],
    featured: true,
  },
  {
    title: 'Sydney Podiatrist',
    industry: 'Healthcare',
    description: 'Medical practice website with online booking integration, patient education resources, and local SEO optimisation.',
    thumbnailImage: portfolioPodiatrist,
    metrics: { loadTime: '1.1s', mobileScore: 97, conversionRate: '+45%' },
    techStack: ['Astro', 'Tailwind CSS'],
    featured: true,
