---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Button from '../components/ui/Button.astro';
import ClientLogoCarousel from '../components/sections/ClientLogoCarousel.astro';
import AboutSection from '../components/sections/AboutSection.astro';
import { Image } from 'astro:assets';
import aboutUsImage from '../assets/images/about-us.png';

const pageTitle = 'About Digital Growth Experts | Award-Winning Sydney SEO Agency';
const pageDescription =
  "Meet the team behind Australia's leading SEO agency. 8+ years experience, 200+ happy clients, 95% retention rate. Learn our story.";
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  schema={{
    type: 'Organization',
    data: {
      '@type': 'Organization',
      name: 'Digital Growth Experts',
      description: pageDescription,
      url: 'https://growthexperts.com.au/about/',
      foundingDate: '2016',
      email: 'Info@growthexperts.com.au',
      telephone: '+61281128010',
      areaServed: 'Australia',
      sameAs: [
        'https://www.facebook.com/SEOGrowthExperts',
        'https://www.linkedin.com/company/seocompanysydney/',
        'https://www.instagram.com/digitalgrowthexperts/',
        'https://www.youtube.com/@digital-growth-experts',
        'https://x.com/GrowthExpertsAu',
      ],
    },
  }}
>
  <Header />

  <main id="main-content">
    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-gradient-hero pt-20 pb-16 md:pt-28 md:pb-24">
      <!-- Background decoration - Enhanced brand colors -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute -top-40 -right-40 w-96 h-96 bg-primary-300 rounded-full opacity-30 blur-3xl"></div>
        <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-secondary-300 rounded-full opacity-30 blur-3xl"></div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-accent-200 rounded-full opacity-10 blur-3xl"></div>
      </div>

      <div class="container-custom relative z-10">
        <!-- Breadcrumb -->
        <nav class="text-sm text-gray-600 mb-8 text-center lg:text-left">
          <a href="/" class="hover:text-primary-600 transition-colors">Home</a>
          <span class="mx-2">/</span>
          <span class="text-gray-900 font-semibold">About</span>
        </nav>

        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <!-- Left Column: Content -->
          <div class="text-center lg:text-left animate-fade-in">
            <!-- Main Headline -->
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold font-display text-gray-900 mb-6 leading-tight">
              We're Not Your <span class="text-gradient-trust">Typical SEO Agency</span>
            </h1>

            <!-- Subtitle -->
            <p class="text-xl md:text-2xl text-gray-700 leading-relaxed mb-6">
              Born from frustration with empty promises, built on real results.
            </p>

            <p class="text-lg text-gray-600 leading-relaxed max-w-2xl mx-auto lg:mx-0 mb-8">
              We started Digital Growth Experts because we were tired of seeing businesses burned by agencies making big promises and delivering nothing. We believe in transparency, proven results, and building partnerships that actually help your business grow.
            </p>

            <!-- Google Review Badge -->
            <div class="flex justify-center lg:justify-start mb-8">
              <a
                href="https://g.page/r/CYvsE4uAZ_IpEBM/review"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block group"
                aria-label="Read our Google reviews - 5.0 stars"
              >
                <div class="bg-white rounded-full shadow-md hover:shadow-lg transition-all duration-300 px-5 py-3 border border-gray-200 inline-flex items-center gap-3 transform hover:scale-105">
                  <!-- Google "G" Logo -->
                  <svg class="w-5 h-5 flex-shrink-0" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                    <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                    <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                    <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                  </svg>

                  <!-- Rating Display -->
                  <div class="flex items-center gap-2">
                    <span class="text-lg font-bold text-gray-900">5.0</span>
                    <div class="flex items-center gap-0.5">
                      <svg class="w-4 h-4 text-[#FBBC05]" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                      <svg class="w-4 h-4 text-[#FBBC05]" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                      <svg class="w-4 h-4 text-[#FBBC05]" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                      <svg class="w-4 h-4 text-[#FBBC05]" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                      <svg class="w-4 h-4 text-[#FBBC05]" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                    </div>
                  </div>

                  <!-- Divider -->
                  <div class="w-px h-6 bg-gray-300"></div>

                  <!-- Review Count -->
                  <span class="text-sm text-gray-600 font-medium">47 reviews</span>
                </div>
              </a>
            </div>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
              <Button variant="primary" size="lg" href="/contact/">
                Get in Touch
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </Button>
            </div>
          </div>

          <!-- Right Column: About Us Photo with Trust Badge -->
          <div class="animate-slide-up relative">
            <!-- Photo Container with enhanced styling -->
            <div class="relative rounded-2xl overflow-hidden shadow-2xl border-4 border-white group">
              <!-- About Us Photo -->
              <Image
                src={aboutUsImage}
                alt="Digital Growth Experts team - Your dedicated account managers ready to deliver transparent, results-driven SEO"
                widths={[400, 600, 800, 1200]}
                sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 600px"
                loading="lazy"
                format="webp"
                quality={85}
                class="w-full h-auto object-cover transition-transform duration-500 group-hover:scale-105"
              />

              <!-- Trust Badge Overlay -->
              <div class="absolute bottom-6 left-6 right-6 bg-white/95 backdrop-blur-sm p-4 rounded-xl shadow-lg border-2 border-primary-100">
                <div class="flex items-center space-x-3">
                  <!-- Badge Icon -->
                  <div class="flex-shrink-0 w-12 h-12 bg-secondary-100 rounded-full flex items-center justify-center">
                    <svg class="w-7 h-7 text-secondary-600" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                    </svg>
                  </div>
                  <!-- Badge Text -->
                  <div class="flex-1">
                    <div class="text-sm font-bold text-gray-900">Meet Your Dedicated Account Manager</div>
                    <div class="text-xs text-gray-600">Australian SEO experts with 8+ years experience</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Client Logos -->
    <ClientLogoCarousel />

    <!-- About Section with Technology Badges -->
    <AboutSection />

    <!-- Company Values Section -->
    <section class="section-padding bg-gradient-to-b from-white to-primary-50/30">
      <div class="container-custom">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold font-display text-gray-900 mb-4">
            What We're Built On
          </h2>
          <p class="text-lg md:text-xl text-gray-600">
            These aren't just words on a wall. They're how we operate every single day.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
          <!-- Value Card 1: Transparency First -->
          <div class="group relative bg-white rounded-2xl shadow-lg border-2 border-primary-100 p-6 transition-all duration-300 hover:shadow-2xl hover:shadow-primary/20 hover:border-primary-300 hover:-translate-y-2">
            <!-- Gradient accent bar -->
            <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-primary-500 to-primary-600 rounded-t-2xl"></div>

            <!-- Icon with enhanced styling -->
            <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center mb-5 group-hover:scale-110 group-hover:rotate-3 transition-transform duration-300 shadow-lg shadow-primary/30">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" clip-rule="evenodd" />
              </svg>
            </div>

            <!-- Title -->
            <h3 class="text-xl font-bold font-display text-primary-700 mb-3 group-hover:text-primary-800 transition-colors">Transparency First</h3>

            <!-- Description -->
            <p class="text-gray-600 leading-relaxed mb-4">No black-box tactics. We show you exactly what we do and why it works.</p>

            <!-- Proof Point Badge -->
            <div class="inline-flex items-center gap-2 px-3 py-2 bg-gradient-to-r from-secondary-50 to-secondary-100 border border-secondary-200 rounded-lg">
              <svg class="w-4 h-4 text-secondary-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-xs font-semibold text-secondary-800">Monthly detailed reports for every client</span>
            </div>
          </div>

          <!-- Value Card 2: Results Over Promises -->
          <div class="group relative bg-white rounded-2xl shadow-lg border-2 border-primary-100 p-6 transition-all duration-300 hover:shadow-2xl hover:shadow-primary/20 hover:border-primary-300 hover:-translate-y-2">
            <!-- Gradient accent bar -->
            <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-secondary-500 to-secondary-600 rounded-t-2xl"></div>

            <!-- Icon with enhanced styling -->
            <div class="w-16 h-16 bg-gradient-to-br from-secondary-500 to-secondary-600 rounded-xl flex items-center justify-center mb-5 group-hover:scale-110 group-hover:rotate-3 transition-transform duration-300 shadow-lg shadow-secondary/30">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
            </div>

            <!-- Title -->
            <h3 class="text-xl font-bold font-display text-secondary-700 mb-3 group-hover:text-secondary-800 transition-colors">Results Over Promises</h3>

            <!-- Description -->
            <p class="text-gray-600 leading-relaxed mb-4">We'd rather under-promise and over-deliver than the reverse.</p>

            <!-- Proof Point Badge -->
            <div class="inline-flex items-center gap-2 px-3 py-2 bg-gradient-to-r from-accent-50 to-accent-100 border border-accent-200 rounded-lg">
              <svg class="w-4 h-4 text-accent-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-xs font-semibold text-accent-800">95% client retention speaks for itself</span>
            </div>
          </div>

          <!-- Value Card 3: No Long-Term Contracts -->
          <div class="group relative bg-white rounded-2xl shadow-lg border-2 border-primary-100 p-6 transition-all duration-300 hover:shadow-2xl hover:shadow-primary/20 hover:border-primary-300 hover:-translate-y-2">
            <!-- Gradient accent bar -->
            <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-accent-500 to-accent-600 rounded-t-2xl"></div>

            <!-- Icon with enhanced styling -->
            <div class="w-16 h-16 bg-gradient-to-br from-accent-500 to-accent-600 rounded-xl flex items-center justify-center mb-5 group-hover:scale-110 group-hover:rotate-3 transition-transform duration-300 shadow-lg shadow-accent/30">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" clip-rule="evenodd"/>
              </svg>
            </div>

            <!-- Title -->
            <h3 class="text-xl font-bold font-display text-accent-700 mb-3 group-hover:text-accent-800 transition-colors">No Long-Term Contracts</h3>

            <!-- Description -->
            <p class="text-gray-600 leading-relaxed mb-4">You stay because it works, not because you're locked in.</p>

            <!-- Proof Point Badge -->
            <div class="inline-flex items-center gap-2 px-3 py-2 bg-gradient-to-r from-primary-50 to-primary-100 border border-primary-200 rounded-lg">
              <svg class="w-4 h-4 text-primary-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-xs font-semibold text-primary-800">Month-to-month agreements only</span>
            </div>
          </div>

          <!-- Value Card 4: Partnership Mindset -->
          <div class="group relative bg-white rounded-2xl shadow-lg border-2 border-primary-100 p-6 transition-all duration-300 hover:shadow-2xl hover:shadow-primary/20 hover:border-primary-300 hover:-translate-y-2">
            <!-- Gradient accent bar -->
            <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-primary-600 to-secondary-500 rounded-t-2xl"></div>

            <!-- Icon with enhanced styling -->
            <div class="w-16 h-16 bg-gradient-to-br from-primary-600 to-secondary-500 rounded-xl flex items-center justify-center mb-5 group-hover:scale-110 group-hover:rotate-3 transition-transform duration-300 shadow-lg shadow-primary/30">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>

            <!-- Title -->
            <h3 class="text-xl font-bold font-display text-primary-700 mb-3 group-hover:text-primary-800 transition-colors">Partnership Mindset</h3>

            <!-- Description -->
            <p class="text-gray-600 leading-relaxed mb-4">Your success is our success. We're invested in your growth.</p>

            <!-- Proof Point Badge -->
            <div class="inline-flex items-center gap-2 px-3 py-2 bg-gradient-to-r from-secondary-50 to-secondary-100 border border-secondary-200 rounded-lg">
              <svg class="w-4 h-4 text-secondary-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-xs font-semibold text-secondary-800">Average client relationship: 3+ years</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Differentiators Section -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold font-display text-gray-900 mb-4">
            Why Choose Digital Growth Experts?
          </h2>
          <p class="text-lg md:text-xl text-gray-600">
            We do things differently, and the results speak for themselves
          </p>
        </div>

        <div class="max-w-5xl mx-auto">
          <!-- Comparison Grid -->
          <div class="grid md:grid-cols-2 gap-6">
            <!-- Left Column: Typical Agency -->
            <div class="space-y-4">
              <h3 class="text-2xl font-bold font-display text-gray-400 mb-6 text-center">Typical Agency</h3>

              <div class="bg-gray-50 p-4 rounded-lg border-2 border-gray-200">
                <div class="flex items-start space-x-3">
                  <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                  <div>
                    <p class="font-semibold text-gray-700">Long contracts</p>
                    <p class="text-sm text-gray-600">12-24 month lock-ins</p>
                  </div>
                </div>
              </div>

              <div class="bg-gray-50 p-4 rounded-lg border-2 border-gray-200">
                <div class="flex items-start space-x-3">
                  <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                  <div>
                    <p class="font-semibold text-gray-700">Vague reporting</p>
                    <p class="text-sm text-gray-600">Generic dashboards with little insight</p>
                  </div>
                </div>
              </div>

              <div class="bg-gray-50 p-4 rounded-lg border-2 border-gray-200">
