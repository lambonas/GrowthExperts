---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import HeroHome from '../components/sections/HeroHome.astro';
import ClientLogoCarousel from '../components/sections/ClientLogoCarousel.astro';
import SeoTruthSection from '../components/sections/SeoTruthSection.astro';
import CaseStudiesSection from '../components/sections/CaseStudiesSection.astro';
import ServicesGrid from '../components/sections/ServicesGrid.astro';
import CTASection from '../components/sections/CTASection.astro';

const pageTitle = 'SEO Services That Drive Real Results';
const pageDescription =
  'Leading Australian SEO agency helping businesses dominate search rankings and attract qualified leads. Get your free SEO audit today.';
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  schema={{
    type: 'Organization',
    data: {
      '@type': 'Organization',
      name: 'Digital Growth Experts',
      description: pageDescription,
      url: 'https://youragency.com',
      aggregateRating: {
        '@type': 'AggregateRating',
        ratingValue: '5.0',
        reviewCount: '200',
      },
    },
  }}
>
  <Header />

  <main id="main-content">
    <!-- Hero Section -->
    <HeroHome
      title="SEO Services That Drive Real Results"
      subtitle="We help Australian businesses dominate search rankings and attract qualified leads through data-driven SEO strategies. Get more traffic, more leads, and more revenue."
      primaryCTA={{ text: 'Free Strategy Session', href: '/contact' }}
    />

    <!-- Client Logos -->
    <ClientLogoCarousel />

    <!-- SEO Truth Section -->
    <SeoTruthSection />

    <!-- Case Studies Section - Proof of Results -->
    <CaseStudiesSection />

    <!-- Services Grid -->
    <ServicesGrid />

    <!-- Why Choose Us Section -->
    <section class="section-padding bg-gradient-hero">
      <div class="container-custom">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            Why Choose Digital Growth Experts?
          </h2>
          <p class="text-lg md:text-xl text-gray-600">
            We're not just another SEO agency. We're your growth partners.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Feature 1 -->
          <div class="bg-white p-8 rounded-xl shadow-md">
            <div class="w-14 h-14 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
              <svg
                class="w-7 h-7 text-primary-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Data-Driven Results</h3>
            <p class="text-gray-600">
              Every strategy is backed by data and analytics. We don't guessâ€”we know what works.
            </p>
          </div>

          <!-- Feature 2 -->
          <div class="bg-white p-8 rounded-xl shadow-md">
            <div class="w-14 h-14 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
              <svg
                class="w-7 h-7 text-primary-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
                />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Dedicated Team</h3>
            <p class="text-gray-600">
              Your own dedicated SEO specialist and support team, always available when you need us.
            </p>
          </div>

          <!-- Feature 3 -->
          <div class="bg-white p-8 rounded-xl shadow-md">
            <div class="w-14 h-14 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
              <svg
                class="w-7 h-7 text-primary-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Transparent Reporting</h3>
            <p class="text-gray-600">
              Monthly reports showing exactly what we've done and the results we've achieved.
            </p>
          </div>

          <!-- Feature 4 -->
          <div class="bg-white p-8 rounded-xl shadow-md">
            <div class="w-14 h-14 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
              <svg
                class="w-7 h-7 text-primary-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"
                />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Fast Results</h3>
            <p class="text-gray-600">
              See improvements in rankings and traffic within the first 90 days.
            </p>
          </div>

          <!-- Feature 5 -->
          <div class="bg-white p-8 rounded-xl shadow-md">
            <div class="w-14 h-14 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
              <svg
                class="w-7 h-7 text-primary-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">No Long-Term Contracts</h3>
            <p class="text-gray-600">
              Month-to-month agreements. Stay because you love the results, not because you're locked in.
            </p>
          </div>

          <!-- Feature 6 -->
          <div class="bg-white p-8 rounded-xl shadow-md">
            <div class="w-14 h-14 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
              <svg
                class="w-7 h-7 text-primary-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"
                />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Australian Expertise</h3>
            <p class="text-gray-600">
              Deep understanding of the Australian market, search behavior, and local SEO best practices.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <CTASection
      title="Ready to Dominate Search Rankings?"
      subtitle="Get your free SEO audit and discover how we can help you attract more qualified leads and grow your revenue."
      primaryCTA={{ text: 'Free Strategy Session', href: '/contact' }}
    />
  </main>

  <Footer />
</BaseLayout>
