---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import HeroHome from '../components/sections/HeroHome.astro';
import ClientLogoCarousel from '../components/sections/ClientLogoCarousel.astro';
import CaseStudiesSection from '../components/sections/CaseStudiesSection.astro';
import CTASection from '../components/sections/CTASection.astro';
import AccordionItem from '../components/ui/AccordionItem.astro';

const seo = {
  title: 'Ecommerce SEO Services | E-commerce SEO Agency Australia 2025',
  description: 'Expert ecommerce SEO services from a leading e-commerce SEO agency. Increase organic traffic, optimize product pages, and drive revenue with our proven SEO strategies for ecommerce sites.',
  keywords: [
    'ecommerce seo',
    'e-commerce seo agency',
    'e commerce seo agency',
    'e-commerce seo',
    'seo e-commerce',
    'e commerce seo',
    'seo for e-commerce',
    'ecommerce seo services',
    'product page optimization',
    'online store seo',
    'ecommerce seo australia',
  ],
  ogImage: '/images/team-hero.png',
  ogType: 'website',
};

const hero = {
  title: 'Ecommerce SEO That Drives Revenue, Not Just Traffic',
  subtitle: 'Specialized SEO strategies for online stores. We optimize product pages, category pages, and technical infrastructure to increase visibility and drive more qualified buyers to your site.',
  primaryCTA: {
    text: 'Free Strategy Session',
    href: '/contact/'
  },
};

const schema = {
  type: 'Service' as const,
  data: {
    '@type': 'Service',
    name: 'E-commerce SEO Services',
    description:
      'Specialist e-commerce SEO services including product page optimization, technical e-commerce SEO, category page strategy, and conversion-focused optimization.',
    provider: {
      '@type': 'Organization',
      name: 'Digital Growth Experts',
    },
    areaServed: {
      '@type': 'Country',
      name: 'Australia',
    },
    hasOfferCatalog: {
      '@type': 'OfferCatalog',
      name: 'E-commerce SEO Services',
      itemListElement: [
        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'Product Page SEO',
            description:
              'Comprehensive optimization of product pages including titles, descriptions, images, schema markup, and user-generated content for maximum visibility.',
          },
        },
        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'Technical E-commerce SEO',
            description:
              'Resolve complex technical challenges including duplicate content, faceted navigation, site speed, mobile optimization, and crawl budget management.',
          },
        },
        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'Category Page Optimization',
            description:
              'Strategic optimization of category and collection pages to rank for broader commercial keywords and drive high-intent traffic.',
          },
        },
      ],
    },
  },
};
---

<BaseLayout
  title={seo.title}
  description={seo.description}
  ogImage={seo.ogImage}
  ogType={seo.ogType}
  keywords={seo.keywords}
  schema={schema}
>
  <Header />

  <main id="main-content">
    <!-- Hero Section - Conversion-focused with clear value proposition -->
    <HeroHome
      title={hero.title}
      subtitle={hero.subtitle}
      primaryCTA={hero.primaryCTA}
      secondaryCTA={hero.secondaryCTA}
    />

    <!-- Social Proof - Client Logos -->
    <ClientLogoCarousel />

    <!-- Proven Results - Case Studies -->
    <CaseStudiesSection />

    <!-- Introduction Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold font-display mb-6 text-gray-900">
            E-commerce SEO Built for Revenue Growth
          </h2>
          <p class="text-xl text-gray-700 leading-relaxed">
            E-commerce SEO requires specialized expertise. We understand product page optimization, faceted
            navigation challenges, and the technical complexities that make or break online store visibility.
          </p>
        </div>

        <!-- Benefits Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mt-16">
          <div class="bg-gradient-to-br from-blue-50 to-indigo-50 p-6 rounded-xl">
            <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mb-4">
              <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Revenue-Focused</h3>
            <p class="text-gray-700">
              Our strategies prioritize high-intent commercial keywords that drive buyers, not just browsers. Focus
              on ROI, not vanity metrics.
            </p>
          </div>

          <div class="bg-gradient-to-br from-green-50 to-emerald-50 p-6 rounded-xl">
            <div class="w-12 h-12 bg-green-600 rounded-lg flex items-center justify-center mb-4">
              <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Product Expertise</h3>
            <p class="text-gray-700">
              Deep experience optimizing thousands of product pages across diverse e-commerce platforms including
              Shopify, WooCommerce, and custom builds. Our <a href="/technical-seo/" class="text-primary-600 hover:text-primary-700 font-semibold"><strong>technical SEO</strong></a> expertise ensures your store performs flawlessly.
            </p>
          </div>

          <div class="bg-gradient-to-br from-purple-50 to-pink-50 p-6 rounded-xl">
            <div class="w-12 h-12 bg-purple-600 rounded-lg flex items-center justify-center mb-4">
