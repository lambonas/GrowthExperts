---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Hero from '../components/sections/Hero.astro';
import ClientLogoCarousel from '../components/sections/ClientLogoCarousel.astro';
import CaseStudiesSection from '../components/sections/CaseStudiesSection.astro';
import CTASection from '../components/sections/CTASection.astro';
import { teamHeroImage } from '../assets/images/index';

const seo = {
  title: 'Electrician SEO Services | Get More Emergency & Service Calls',
  description: 'Specialized SEO for electricians and electrical contractors. Dominate "electrician near me" searches, get more emergency calls, and fill your schedule with high-value electrical jobs.',
  keywords: [
    'electrician seo',
    'electrical contractor seo',
    'seo for electricians',
    'electrician marketing',
    'electrical services seo',
    'emergency electrician marketing',
    'local electrician seo',
    'electrician google ads alternative',
  ],
  ogimage: teamHeroImage,
  ogType: 'website',
};

const hero = {
  title: 'Electrician SEO That Keeps Your Phone Ringing',
  subtitle: 'Stop paying $50+ per click for Google Ads. Dominate local search and get more emergency calls, service bookings, and high-value commercial projects.',
  primaryCTA: {
    text: 'Free Strategy Session',
    href: '/contact/',
  },
  secondaryCTA: {
    text: `See <a href="/" class="text-primary-600 hover:text-primary-700 font-semibold"><strong>Digital Growth Experts</strong></a>'s Results`,
    href: '#results',
  },
  image: teamHeroImage,
  imageAlt: 'SEO services for electricians and electrical contractors',
};

const schema = {
  type: 'Service' as const,
  data: {
    '@type': 'Service',
    name: 'Electrician SEO Services',
    description: 'Specialized SEO and digital marketing services for electricians and electrical contractors to generate more service calls and bookings.',
    provider: {
      '@type': 'Organization',
      name: 'Digital Growth Experts',
    },
    areaServed: {
      '@type': 'Country',
      name: 'Australia',
    },
  },
};
---

<BaseLayout
  title={seo.title}
  description={seo.description}
  ogImage={seo.ogImage}
  ogType={seo.ogType}
  keywords={seo.keywords}
  schema={schema}
>
  <Header />

  <main id="main-content">
    <Hero
      title={hero.title}
      subtitle={hero.subtitle}
      primaryCTA={hero.primaryCTA}
      secondaryCTA={hero.secondaryCTA}
      image={hero.image}
      imageAlt={hero.imageAlt}
    />

    <!-- Social Proof - Client Logos -->
    <ClientLogoCarousel />

    <!-- Proven Results - Case Studies -->
    <CaseStudiesSection />

    <!-- Why Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold font-display mb-6 text-gray-900">
            Why SEO Is Critical for Electrical Contractors
          </h2>
          <p class="text-xl text-gray-700 leading-relaxed">
            When someone's power goes out or they need electrical work, they search Google immediately. If you're not on page one, they're calling your competitors.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="bg-gradient-to-br from-blue-50 to-indigo-50 p-6 rounded-xl">
            <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">More Emergency Calls</h3>
            <p class="text-gray-700">
              78% of "emergency electrician near me" searches result in same-day calls. Rank at the top and capture high-urgency, high-value jobs.
            </p>
          </div>

          <div class="bg-gradient-to-br from-green-50 to-emerald-50 p-6 rounded-xl">
            <div class="w-12 h-12 bg-green-600 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Stop Wasting Money on Ads</h3>
            <p class="text-gray-700">
              Electrician keywords cost $30-$100+ per click. SEO generates leads for a fraction of the cost without ongoing ad spend.
            </p>
          </div>

          <div class="bg-gradient-to-br from-purple-50 to-pink-50 p-6 rounded-xl">
            <div class="w-12 h-12 bg-purple-600 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.040A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Build Trust & Credibility</h3>
            <p class="text-gray-700">
              Customers check reviews and Google rankings before calling. First-page visibility signals you're licensed, trusted, and professional.
            </p>
          </div>

          <div class="bg-gradient-to-br from-orange-50 to-red-50 p-6 rounded-xl">
            <div class="w-12 h-12 bg-orange-600 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Attract Commercial Projects</h3>
            <p class="text-gray-700">
              Rank for "commercial electrician" and attract higher-value projects from property managers, builders, and businesses.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- What's Included -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold font-display mb-6 text-gray-900">
            What's Included in Our Electrician SEO Services
          </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900"><a href="/local-seo/"><strong>Local SEO</strong></a> Domination</h3>
            <p class="text-gray-700">
              Optimize Google Business Profile, dominate the local 3-pack, and appear for "electrician near me" searches when customers need you most.
            </p>
          </div>

          <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Service Page Optimization</h3>
            <p class="text-gray-700">
              Create SEO-optimized pages for every service—emergency repairs, rewiring, switchboard upgrades, lighting installation, data cabling.
            </p>
          </div>

          <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Review Generation System</h3>
            <p class="text-gray-700">
              Implement automated review requests to build 5-star ratings. More reviews = higher rankings and more customer trust.
            </p>
          </div>

          <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Citation & Directory Building</h3>
            <p class="text-gray-700">
              List your business on 50+ directories, trade sites, and local platforms. Ensure NAP consistency for maximum local visibility.
            </p>
          </div>

          <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Mobile & Speed Optimization</h3>
            <p class="text-gray-700">
              Most emergency searches happen on mobile. Ensure your site loads fast, displays perfectly, and has click-to-call buttons.
            </p>
          </div>

          <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Call Tracking & Reporting</h3>
            <p class="text-gray-700">
              Track every call, form submission, and conversion. See exactly which keywords and pages generate bookings.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold font-display mb-6 text-gray-900">
            How We Get You More Electrical Jobs
          </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="flex items-start">
            <div class="flex-shrink-0 w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold">1</div>
            <div class="ml-4">
              <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Local Market Analysis</h3>
              <p class="text-gray-700">Analyze local competitors, identify ranking opportunities, and create a roadmap to dominate your service area.</p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold">2</div>
            <div class="ml-4">
              <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Google Business Optimization</h3>
              <p class="text-gray-700">Fully optimize your GBP with services, photos, posts, and reviews to dominate the local 3-pack.</p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold">3</div>
            <div class="ml-4">
              <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Website Optimization</h3>
              <p class="text-gray-700">Optimize service pages, add service area pages, implement schema markup, and improve conversion elements.</p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold">4</div>
            <div class="ml-4">
              <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Citation Building</h3>
              <p class="text-gray-700">Build listings on trade directories, local business sites, and review platforms to boost local authority.</p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold">5</div>
            <div class="ml-4">
              <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Review Generation</h3>
              <p class="text-gray-700">Implement systems to get more 5-star reviews from happy customers, improving rankings and trust.</p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold">6</div>
            <div class="ml-4">
              <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Ongoing Optimization</h3>
              <p class="text-gray-700">Monthly reporting, continuous optimization, and adaptation to algorithm changes to maintain top rankings.</p>
            </div>
          </div>
        </div>
      </div>

      <div class="container mx-auto px-4 max-w-4xl">
        <p class="text-gray-700 leading-relaxed mb-6 text-center">
          <a href="/industries/" class="text-primary-600 hover:text-primary-700 font-semibold text-lg">Explore all our <strong>industry-specific SEO services</strong> →</a>
        </p>
        <p class="text-gray-700 leading-relaxed mb-8 text-center">
          Have questions? Visit our <a href="/faq/" class="text-primary-600 hover:text-primary-700 font-semibold"><strong>SEO FAQ page</strong></a> for answers.
        </p>
      </div>
    </section>

    <!-- CTA -->
    <CTASection
      title="Ready to Get More Emergency Calls & Electrical Jobs?"
      description="Stop wasting money on expensive ads. Get a free SEO audit showing exactly how we'll fill your schedule with high-value electrical work."
      primaryCTA={{
        text: 'Free Strategy Session',
        href: '/contact/',
      }}
      secondaryCTA={{
        text: 'Call Now',
        href: 'tel:+61281128010',
      }}
    />
  </main>

  <Footer />
</BaseLayout>
