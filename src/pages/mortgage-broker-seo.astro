  type: 'Service' as const,
  data: {
    '@type': 'Service',
    name: 'Mortgage Broker SEO Services',
    description: 'Specialized SEO services for mortgage brokers to generate more qualified home loan leads.',
    provider: {
      '@type': 'Organization',
      name: 'Digital Growth Experts',
    },
