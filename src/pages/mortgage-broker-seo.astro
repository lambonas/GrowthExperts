---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Hero from '../components/sections/Hero.astro';
import ClientLogoCarousel from '../components/sections/ClientLogoCarousel.astro';
import CaseStudiesSection from '../components/sections/CaseStudiesSection.astro';
import CTASection from '../components/sections/CTASection.astro';

const seo = {
  title: 'Mortgage Broker SEO Services | Get More Home Loan Leads',
  description: 'Specialized SEO for mortgage brokers and home loan specialists. Attract qualified borrowers, dominate local searches, and build a consistent pipeline of high-value mortgage leads.',
  keywords: [
    'mortgage broker seo',
    'home loan broker seo',
    'mortgage broker marketing',
    'seo for mortgage brokers',
    'mortgage broker lead generation',
    'home loan specialist seo',
    'mortgage marketing services',
  ],
  canonical: 'https://growthexperts.com.au/mortgage-broker-seo',
  ogImage: '/images/team-hero.png',
  ogType: 'website',
};

const hero = {
  title: 'Mortgage Broker SEO That Generates Quality Leads',
  subtitle: 'Stop relying on expensive aggregator leads. Attract borrowers directly with SEO strategies designed specifically for mortgage brokers and home loan specialists.',
  primaryCTA: {
    text: 'Free Strategy Session',
    href: '/contact',
  },
  image: '/images/team-hero.png',
  imageAlt: 'SEO services for mortgage brokers',
};

const schema = {
  type: 'Service' as const,
  data: {
    '@type': 'Service',
    name: 'Mortgage Broker SEO Services',
    description: 'Specialized SEO services for mortgage brokers to generate more qualified home loan leads.',
    provider: {
      '@type': 'Organization',
      name: 'Digital Growth Experts',
    },
    areaServed: {
      '@type': 'Country',
      name: 'Australia',
    },
  },
};
---

<BaseLayout
  title={seo.title}
  description={seo.description}
  canonical={seo.canonical}
  ogImage={seo.ogImage}
  ogType={seo.ogType}
  keywords={seo.keywords}
  schema={schema}
>
  <Header />

  <main id="main-content">
    <Hero
      title={hero.title}
      subtitle={hero.subtitle}
      primaryCTA={hero.primaryCTA}
      secondaryCTA={hero.secondaryCTA}
      image={hero.image}
      imageAlt={hero.imageAlt}
    />

    <!-- Social Proof - Client Logos -->
    <ClientLogoCarousel />

    <!-- Proven Results - Case Studies -->
    <CaseStudiesSection />

    <section class="py-16 bg-white">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold font-display mb-6 text-gray-900">
            Why Mortgage Brokers Need SEO
          </h2>
          <p class="text-xl text-gray-700">
            Homebuyers research mortgage options online for weeks before contacting a broker. Rank at the top and build trust early.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="bg-gradient-to-br from-blue-50 to-indigo-50 p-6 rounded-xl">
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Lower Lead Costs</h3>
            <p class="text-gray-700">
              Stop paying $80-$150 per aggregator lead. SEO generates unlimited organic leads at a fraction of the cost.
            </p>
          </div>

          <div class="bg-gradient-to-br from-green-50 to-emerald-50 p-6 rounded-xl">
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Build Trust Early</h3>
            <p class="text-gray-700">
              Educate borrowers with valuable content and become their trusted advisor before they even make contact.
            </p>
          </div>

          <div class="bg-gradient-to-br from-purple-50 to-pink-50 p-6 rounded-xl">
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Higher Quality Leads</h3>
            <p class="text-gray-700">
              Organic visitors are more informed, pre-qualified, and ready to proceed compared to cold leads.
            </p>
          </div>

          <div class="bg-gradient-to-br from-orange-50 to-red-50 p-6 rounded-xl">
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Stand Out from Competition</h3>
            <p class="text-gray-700">
              Most brokers compete on the same aggregator platforms. SEO gives you your own visibility and brand.
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold font-display mb-6 text-gray-900">
            What's Included in Our Mortgage Broker SEO Services
          </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="bg-white p-8 rounded-xl shadow-sm">
            <h3 class="text-xl font-semibold font-display mb-3 text-gray-900">Local SEO for Brokers</h3>
            <p class="text-gray-700">
              Dominate "mortgage broker near me" and "[suburb] mortgage broker" searches to capture local borrowers.
            </p>
          </div>

          <div class="bg-white p-8 rounded-xl shadow-sm">
            <h3 class="text-xl font-semibold font-display mb-3 text-gray-900">Educational Content Strategy</h3>
            <p class="text-gray-700">
              Create guides on first home buyer loans, refinancing, investment loans, and SMSF lending to attract specific search intent.
            </p>
          </div>

          <div class="bg-white p-8 rounded-xl shadow-sm">
            <h3 class="text-xl font-semibold font-display mb-3 text-gray-900">Calculator & Tool Optimization</h3>
            <p class="text-gray-700">
              Optimize mortgage calculators, borrowing capacity tools, and comparison resources that attract high-intent searches.
            </p>
          </div>

          <div class="bg-white p-8 rounded-xl shadow-sm">
            <h3 class="text-xl font-semibold font-display mb-3 text-gray-900">Trust Signal Optimization</h3>
            <p class="text-gray-700">
              Showcase accreditations (MFAA, FBAA), lender panel, testimonials, and 5-star reviews to build credibility.
            </p>
          </div>

          <div class="bg-white p-8 rounded-xl shadow-sm">
            <h3 class="text-xl font-semibold font-display mb-3 text-gray-900">Compliance-Friendly Content</h3>
            <p class="text-gray-700">
              Create SEO content that complies with ASIC regulations and credit licensing requirements.
            </p>
          </div>

          <div class="bg-white p-8 rounded-xl shadow-sm">
            <h3 class="text-xl font-semibold font-display mb-3 text-gray-900">Conversion Optimization</h3>
            <p class="text-gray-700">
              Optimize contact forms, callback widgets, and online application flows to maximize lead conversions.
            </p>
          </div>
        </div>
      </div>
    </section>

    <CTASection
      title="Ready to Generate More Qualified Mortgage Leads?"
      description="Get a free SEO audit showing how we'll attract borrowers directly to your website without expensive aggregator fees."
      primaryCTA={{
        text: 'Free Strategy Session',
        href: '/contact',
      }}
    />
  </main>

  <Footer />
</BaseLayout>
