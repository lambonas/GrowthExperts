---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Hero from '../components/sections/Hero.astro';
import ClientLogoCarousel from '../components/sections/ClientLogoCarousel.astro';
import CaseStudiesSection from '../components/sections/CaseStudiesSection.astro';
import CTASection from '../components/sections/CTASection.astro';
import { teamHeroImage } from '../assets/images/index';

const seo = {
  title: 'SEO Audit Services | Comprehensive Website Analysis',
  description: 'Professional SEO audits that uncover every issue limiting your rankings. Get a detailed roadmap with actionable recommendations to fix technical problems, content gaps, and opportunities.',
  keywords: [
    'seo audit services',
    'website seo audit',
    'comprehensive seo audit',
    'technical seo audit',
    'seo analysis',
    'free seo audit',
    'seo audit report',
    'website audit',
    'seo audit australia',
    'professional seo audit',
  ],
  ogimage: teamHeroImage,
  ogType: 'website',
};

const hero = {
  title: 'SEO Audit Services That Reveal Every Opportunity',
  subtitle: 'Get a comprehensive SEO audit that uncovers technical issues, content gaps, and competitive opportunities. Receive a prioritized action plan to maximize your organic growth.',
  primaryCTA: {
    text: 'Free Strategy Session',
    href: '/contact/',
  },
  image: teamHeroImage,
  imageAlt: 'Comprehensive SEO audit services',
};

const schema = {
  type: 'Service' as const,
  data: {
    '@type': 'Service',
    name: 'SEO Audit Services',
    description:
      'Professional comprehensive SEO audits covering technical issues, content analysis, link profile review, and competitive benchmarking with actionable recommendations.',
    provider: {
      '@type': 'Organization',
      name: 'Digital Growth Experts',
    },
    areaServed: {
      '@type': 'Country',
      name: 'Australia',
    },
    hasOfferCatalog: {
      '@type': 'OfferCatalog',
      name: 'SEO Audit Services',
      itemListElement: [
        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'Technical SEO Audit',
            description:
              'Comprehensive analysis of technical factors including site speed, mobile optimization, crawl errors, indexation issues, and structured data.',
          },
        },
        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'Content & On-Page Audit',
            description:
              'Detailed review of content quality, keyword targeting, meta tags, heading structure, and on-page optimization opportunities.',
          },
        },
        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'Backlink Profile Analysis',
            description:
              'Thorough examination of your backlink profile including toxic link identification, anchor text analysis, and link building opportunities.',
          },
        },
      ],
    },
  },
};
---

<BaseLayout
  title={seo.title}
  description={seo.description}
  ogImage={seo.ogImage}
  ogType={seo.ogType}
  keywords={seo.keywords}
  schema={schema}
>
  <Header />

  <main id="main-content">
    <!-- Hero Section -->
    <Hero
      title={hero.title}
      subtitle={hero.subtitle}
      primaryCTA={hero.primaryCTA}
      secondaryCTA={hero.secondaryCTA}
      image={hero.image}
      imageAlt={hero.imageAlt}
    />

    <!-- Social Proof - Client Logos -->
    <ClientLogoCarousel />

    <!-- Proven Results - Case Studies -->
    <CaseStudiesSection />

    <!-- Introduction Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold font-display mb-6 text-gray-900">
            Know Exactly What's Holding Your Rankings Back
          </h2>
          <p class="text-xl text-gray-700 leading-relaxed">
            A professional SEO audit reveals every technical issue, content gap, and missed opportunity
            preventing your website from ranking. Get clear, actionable insights backed by dataâ€”not guesswork. Essential for <a href="/local-seo/"><strong>Local SEO</strong></a> success and competitive advantage.
          </p>
        </div>

        <!-- Benefits Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mt-16">
          <div class="bg-gradient-to-br from-blue-50 to-indigo-50 p-6 rounded-xl">
            <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mb-4">
              <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Comprehensive Analysis</h3>
            <p class="text-gray-700">
              Deep-dive audit examining 200+ ranking factors across technical SEO, content, backlinks, and
              user experience.
            </p>
          </div>

          <div class="bg-gradient-to-br from-green-50 to-emerald-50 p-6 rounded-xl">
            <div class="w-12 h-12 bg-green-600 rounded-lg flex items-center justify-center mb-4">
              <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Prioritized Roadmap</h3>
            <p class="text-gray-700">
              Clear action plan prioritized by impact vs. effort, so you know exactly what to fix first for
              maximum results.
            </p>
          </div>

          <div class="bg-gradient-to-br from-purple-50 to-pink-50 p-6 rounded-xl">
            <div class="w-12 h-12 bg-purple-600 rounded-lg flex items-center justify-center mb-4">
              <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Competitive Insights</h3>
            <p class="text-gray-700">
              Benchmark against top competitors to identify gaps in your strategy and opportunities they're
              missing.
            </p>
          </div>

          <div class="bg-gradient-to-br from-orange-50 to-red-50 p-6 rounded-xl">
            <div class="w-12 h-12 bg-orange-600 rounded-lg flex items-center justify-center mb-4">
              <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Quick Wins Identified</h3>
            <p class="text-gray-700">
              Discover low-hanging fruit optimizations that can be implemented quickly for immediate ranking
              improvements.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- What's Included Section -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold font-display mb-6 text-gray-900">
            What's Included in Our SEO Audit
          </h2>
          <p class="text-xl text-gray-700">
            A comprehensive analysis covering every aspect of your SEO performance with actionable recommendations.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Service Card 1 -->
          <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-start mb-4">
              <div class="flex-shrink-0">
                <div
                  class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center"
                >
                  <svg
                    class="w-6 h-6 text-blue-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
                    ></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Technical SEO Analysis</h3>
                <p class="text-gray-700">
                  Complete <a href="/technical-seo/" class="text-primary-600 hover:text-primary-700 font-semibold"><strong>technical audit</strong></a> including site speed, Core Web Vitals, mobile optimization, crawl
                  errors, indexation issues, XML sitemaps, robots.txt, structured data, and HTTPS implementation. Our <a href="/services/" class="text-primary-600 hover:text-primary-700 font-semibold"><strong>SEO services</strong></a> fix every technical issue identified in the audit.
                </p>
              </div>
            </div>
          </div>

          <!-- Service Card 2 -->
          <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-start mb-4">
              <div class="flex-shrink-0">
                <div
                  class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center"
                >
                  <svg
                    class="w-6 h-6 text-green-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                    ></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">On-Page SEO Review</h3>
                <p class="text-gray-700">
                  Detailed page-by-page analysis of title tags, meta descriptions, heading structure, keyword
                  usage, content quality, internal linking, and image optimization across your site. For <a href="/small-business-seo/"><strong>Small Business SEO</strong></a>, we focus on the most impactful improvements.
                </p>
              </div>
            </div>
          </div>

          <!-- Service Card 3 -->
          <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-start mb-4">
              <div class="flex-shrink-0">
                <div
                  class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center"
                >
                  <svg
                    class="w-6 h-6 text-purple-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                    ></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-semibold font-display mb-2 text-gray-900">Keyword Analysis</h3>
                <p class="text-gray-700">
                  Identify high-value keyword opportunities, analyze current rankings, assess keyword cannibalization,
                  and uncover gaps where competitors are ranking but you're not.
                </p>
              </div>
            </div>
          </div>

          <!-- Remaining cards continue from the original file... -->
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>